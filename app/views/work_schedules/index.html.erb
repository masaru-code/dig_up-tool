<%= @task.name  %>

<div class= "work_schedule_fild">
  <%= form_with model: @work_schedules, url: task_work_schedules_path(@task), local: true do |form| %>
    <%= form.label :name, '工程入力' %>
    <%= form.text_field :name %>
    <%= form.submit "送信" %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>工程</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= link_to '編集', edit_task_work_schedule_path(@task,schedule), class: "btn btn-success" %></td>
        <td><%= link_to '削除', task_work_schedule_path(@task,schedule), method: :delete, data: { confirm: '工程削除しますか?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>